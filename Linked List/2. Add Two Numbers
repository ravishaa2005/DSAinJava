class Solution {
    public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
        ListNode t1=l1;
        ListNode t2=l2;
        ListNode head=new ListNode(0);
        ListNode temp=head;
        int carry=0;
        while(t1!=null || t2!=null){
            while(t1!=null && t2!=null){
                int sum=t1.val+t2.val+carry;
                ListNode a=new ListNode(sum%10);
                carry=sum/10;
                temp.next=a;
                temp=a;
                t1=t1.next;
                t2=t2.next;
            }
            while(t2!=null){
                int sum=t2.val+carry;
                ListNode a=new ListNode(sum%10);
                carry=sum/10;
                temp.next=a;
                temp=a;
                t2=t2.next;
            }
            while(t1!=null){
                int sum=t1.val+carry;
                ListNode a=new ListNode(sum%10);
                carry=sum/10;
                temp.next=a;
                temp=a;
                t1=t1.next;
            }
            if(carry!=0){
                ListNode a=new ListNode(carry);
                temp.next=a;
                temp=a;
            }
        }
        return head.next;
    }
}